# =============================================================================
# CONFIGURACIÓN DEL SISTEMA HPS - PRODUCCIÓN
# Archivo: .env
# Ubicación: /opt/hps-system/.env
# =============================================================================

# -----------------------------------------------------------------------------
# BASE DE DATOS POSTGRESQL
# -----------------------------------------------------------------------------
POSTGRES_DB=hps_system
POSTGRES_USER=hps_user
POSTGRES_PASSWORD=GENERAR_PASSWORD_SEGURO_AQUI
POSTGRES_HOST=db
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# OPENAI API
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-tu-openai-api-key-aqui
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# CONFIGURACIÓN EMAIL (PRIVATE MAIL)
# -----------------------------------------------------------------------------
SMTP_HOST=mail.privateemail.com
SMTP_PORT=587
SMTP_USER=seguridad@idiaicox.com
SMTP_PASSWORD=aicox@seguridad2025
SMTP_FROM_NAME=HPS System
SMTP_REPLY_TO=seguridad@idiaicox.com

IMAP_HOST=mail.privateemail.com
IMAP_PORT=993
IMAP_USER=seguridad@idiaicox.com
IMAP_PASSWORD=aicox@seguridad2025
IMAP_MAILBOX=INBOX

# -----------------------------------------------------------------------------
# CONFIGURACIÓN JWT
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=GENERAR_CLAVE_SECRETA_MUY_SEGURA_AQUI
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DEL AGENTE IA
# -----------------------------------------------------------------------------
AGENTE_IA_HOST=agente-ia
AGENTE_IA_PORT=8000
AGENTE_IA_URL=http://agente-ia:8000

# -----------------------------------------------------------------------------
# CONFIGURACIÓN REDIS
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# CONFIGURACIÓN FRONTEND REACT (PRODUCCIÓN)
# IMPORTANTE: Usar HTTPS y WSS para producción
# -----------------------------------------------------------------------------
REACT_APP_API_URL=https://hps.aicoxidi.com/api
REACT_APP_WS_URL=wss://hps.aicoxidi.com/api
REACT_APP_AGENTE_IA_WS_URL=wss://hps.aicoxidi.com/agente-ia

# -----------------------------------------------------------------------------
# CONFIGURACIÓN BACKEND FASTAPI
# -----------------------------------------------------------------------------
BACKEND_HOST=backend
BACKEND_PORT=8001

# -----------------------------------------------------------------------------
# CONFIGURACIÓN SEGURIDAD
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false

# -----------------------------------------------------------------------------
# NOTAS:
# -----------------------------------------------------------------------------
# 1. POSTGRES_PASSWORD: Generar con:
#    python3 -c "import secrets; print(secrets.token_urlsafe(24))"
#
# 2. JWT_SECRET_KEY: Generar con:
#    python3 -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 3. OPENAI_API_KEY: Obtener de https://platform.openai.com/api-keys
#
# 4. Las contraseñas de email ya están configuradas para Private Mail
#
# 5. Las URLs del frontend deben usar HTTPS/WSS en producción

